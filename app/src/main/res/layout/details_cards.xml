<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="0dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card1"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/Name1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:text="Glutes"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/Name1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Me interesia sto kje se desi ako vakak jdsnfjsfnsjfnjsnfjnsjfnsjnfjsnfjnsjfnsjnfjsnfjsnjfsnjnjsnjsjsnjfnsjnfjsnjsnjsnsjnjnfjsnjfnsjnfjsn"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_accessibility_24"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level"
            android:text="Beginner"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="12sp"/>


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_baseline_access_time_24"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:text="30 seconds"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_baseline_fitness_center_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target"
            android:text="triceps"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12sp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>